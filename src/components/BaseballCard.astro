---
interface Props {
  name: string;
  bio: string;
  avatar: string;
  mobile?: boolean;
}

const { name, bio, avatar, mobile = false } = Astro.props;
---

{mobile ? (
  <div class="flex items-center gap-4">
    <div class="avatar">
      <div class="w-24 rounded-full">
        <img src={avatar} alt={name} />
      </div>
    </div>
    <div>
      <h1 class="text-2xl font-bold">{name}</h1>
      <p class="text-base text-base-content/60">{bio}</p>
    </div>
  </div>
) : (
  <div class="flex flex-col space-y-8">
    <div class="avatar">
      <div class="w-48 rounded-full">
        <img src={avatar} alt={name} />
      </div>
    </div>
    <div>
      <h1 class="text-4xl font-bold mb-4">{name}</h1>
      <p class="text-lg leading-relaxed text-base-content/60">{bio}</p>
    </div>
  </div>
)}
