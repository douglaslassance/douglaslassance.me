---
interface Props {
  title: string;
  description: string;
  role: string;
  url: string;
  image: string;
  type?: 'youtube' | 'instagram' | 'website' | 'github';
}

const { title, description, role, url, image } = Astro.props;
---

<a 
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="card bg-base-100 shadow-sm hover:shadow-xl transition-all duration-300 h-full group p-6"
  style="transform: translateZ(0);"
>
  <div class="flex flex-row gap-6 h-full">
    <div class="flex-1 flex flex-col justify-between">
      <div>
        <h3 class="card-title text-base font-semibold mb-2 text-base-content/80">{title}</h3>
        <p class="text-sm text-base-content/60">{description}</p>
        <p class="text-sm text-base-content/60">{role}</p>
      </div>
      <div class="mt-4">
        <button class="btn btn-ghost btn-sm gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 10v12M15 5.88L14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"/>
          </svg>
          <span class="font-normal">Like</span>
        </button>
      </div>
    </div>
    
    <div class="w-48 flex-shrink-0 rounded-lg overflow-hidden bg-base-200">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover aspect-video"
      />
    </div>
  </div>
</a>

<style>
  .card {
    perspective: 1000px;
  }
  
  .card:hover {
    transform: translateZ(10px) rotateX(2deg) rotateY(-2deg);
  }
</style>
